<%- model_class = User -%>
<%t '.title', :default => model_class.model_name.human.pluralize.titleize %>
<div class="page-header">
  <ul class="breadcrumb">
    <li class="active"><%= model_class.model_name.human.titleize.pluralize %></li>
  </ul>
</div>


<div class="btn-toolbar">
  <div class="btn-group">
    <%= link_to("All Users", { action: "index" }, class: "active btn btn-primary") %>
    <%= link_to("Users pending approval", { action: "index", approved: "false" }, class: "btn btn-primary") %>
  </div>
</div>

<table class="table table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:approved) %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.email, user_path(user) %></td>
        <td><%= boolean_to_human(user.approved) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
