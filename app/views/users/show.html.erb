<%- model_class = User -%>
<div class="page-header">
  <%t '.title', :default => model_class.model_name.human.titleize.pluralize %>
  <%= render 'shared/breadcrumb', crumbs: [
      link_to('Users', users_path),
      @user.email
    ]
  %>
</div>

<dl class="dl-horizontal">
	<dt>Approved?</dt>
  <dd><%= boolean_to_human(@user.approved) %></dd>
  <dt>Role</dt>
  <dd><%= @user.role %></dd>
	<dt>Last signed in at</dt>
  <dd><%= @user.last_sign_in_at %></dd>
	<dt>Last signed in IP</dt>
  <dd><%= @user.last_sign_in_ip %></dd>
</dl>

<div class="well well-sm well-default">
	<div class="form-actions">
	  <%= link_to t('.back', :default => t("helpers.links.back")),users_path, :class => 'btn btn-primary'  %>
	  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path(@user), :class => 'btn btn-default' %>
	  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	              user_path(@user),
	              :method => 'delete',
	              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	              :class => 'btn btn-danger' %>
	</div>
</div>
