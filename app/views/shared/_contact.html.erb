<div class="row">
  <div class="col-md-12">
    <h4>Contact</h4>
    <% obj.emails.each do |email| %>
      <dl class="dl-horizontal">
        <dt><%= "#{mixed_case(email.email_type)} email" %></dt>
        <dd><%= link_to email.email_address, "mailto:#{email.email_address}" %></dd>
      </dl>
    <% end %>

    <% obj.phones.each do |phone| %>
      <dl class="dl-horizontal">
        <dt><%= "#{mixed_case(phone.phone_type)} phone" %></dt>
        <dd><% if obj.phones.first.extension.present? %>
          <%= number_to_phone(phone.phone_number, area_code: true, extension: phone.extension) %>
          <% else %>
          <%= number_to_phone(phone.phone_number, area_code: true) %>
          <% end %>
        </dd>
      </dl>
    <% end %>

    <% obj.addresses.each do |address| %>
      <dl class="dl-horizontal">
        <dt><%= "#{mixed_case(address.address_type)} address" %></dt>
        <dd><%= address.formatted_address %></dd>
      </dl>
    <% end %>
  </div>
</div>
