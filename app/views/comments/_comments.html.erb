<% @comments.each do |comment| %>
	<ul class="unstyled">
		<% if comment.priority? %>
			<li class="text-warning"><%= "#{comment.content} - #{time_ago_in_words comment.updated_at} ago" %></li>
		<% else %>
			<li><%= "#{comment.content} - #{distance_of_time_in_words_to_now comment.updated_at, true} ago" %></li>
		<% end %>
	</ul>
<% end %>