<div class="col-md-5 col-md-offset-3">
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' } ) do |f| %>

		<div class="jumbotron">
			<h3>Please sign in</h3>
			<%= f.input :email, :label => false, :placeholder => "Email address", :input_html => {:class => 'input-large' } %>
			<%= f.input :password, :label => false, :placeholder => "Password", :input_html => {:class => 'input-large' } %>
			<%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => "Remember Me", input_html: { data: {toggle: :checkbox} } if devise_mapping.rememberable? %>

		  <div class="form-actions">
		  	<%= f.submit "Sign in", :class => "btn btn-primary" %>
		  	<%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-default" %>
		  	<%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-default" %>
			</div>
		</div>
	<% end %>
</div>
