<div class="col-md-5 col-md-offset-3">

	<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, :html => { :class => 'form-horizontal' }) do |f| %>
	  <%= devise_error_messages! %>
		<div class="jumbotron">
		<h3>Forgot your password?</h3>
		<%= f.input :email, :label => false, :placeholder => "Email address", :input_html => {:class => 'input-xlarge' } %>

	  <div class="form-actions">
	  	<%= f.submit "Send password reset", :class => "btn btn-primary" %>
		  <%= link_to "Sign in", new_session_path(resource_name), :class => "btn btn-default" %>
	  	<%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-default" %>
		</div>
	</div>
	<% end %>
</div>