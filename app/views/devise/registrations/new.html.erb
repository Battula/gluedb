<div class="col-md-5 col-md-offset-3">

	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
	  <%= devise_error_messages! %>
		<div class="jumbotron">
		<h3>Sign up</h3>
		<%= f.input :email, :label => false, :placeholder => "Email address" %>
		<%= f.input :password, :label => false, :placeholder => "Password" %>
		<%= f.input :password_confirmation, :label => false, :placeholder => "Confirm password" %>

		<div class="form-actions">
			<%= f.submit "Sign up", :class => "btn btn-primary btn-large" %>
		  <%= link_to "Sign in", new_session_path(resource_name), :class => "btn btn-default" %>
		</div>
	</div>
	<% end %>

</div>