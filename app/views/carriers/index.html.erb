<%- model_class = Carrier -%>
<%t '.title', :default => model_class.model_name.human.pluralize.titleize %>
<div class="page-header">
  <%= render 'shared/breadcrumb', text: 'Carriers' %>
</div>
<table class="table table-condensed">
  <thead>
    <tr>
      <th colspan="3">&nbsp;</th>
      <th colspan="2"><%= model_class.human_attribute_name(:individual_market) %></th>
      <th colspan="2"><%= model_class.human_attribute_name(:shop_market) %></th>
    </tr>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:abbreviation) %></th>
      <th><%= model_class.human_attribute_name(:plan_ct) %></th>
      <th><%= model_class.human_attribute_name(:health) %></th>
      <th><%= model_class.human_attribute_name(:dental) %></th>
      <th><%= model_class.human_attribute_name(:health) %></th>
      <th><%= model_class.human_attribute_name(:dental) %></th>
    </tr>
  </thead>
  <tbody>
    <% @carriers.each do |carrier| %>
      <tr>
        <td><%= link_to carrier.name, carrier_path(carrier) %></td>
        <td><%= carrier.abbrev %></td>
        <td><%= carrier.plans.count %></td>
        <td><%= raw(boolean_to_glyph(carrier.individual_market_health)) %></td>
        <td><%= raw(boolean_to_glyph(carrier.individual_market_dental)) %></td>
        <td><%= raw(boolean_to_glyph(carrier.shop_market_health)) %></td>
        <td><%= raw(boolean_to_glyph(carrier.shop_market_dental)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
