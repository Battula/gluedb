<fieldset>
	<div class="row">
		<div class="col-md-4">
			<%= f.input :phone_type, as: :select, collection: ["home", "work"], :include_blank => "Type" %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<%= f.input :phone_number, as: :tel, placeholder: "202-555-1212", input_html: { value: number_to_phone(f.object.phone_number) } %>
		</div>
		<div class="col-md-3">
			<%= f.input_field :extension, placeholder: "1234 (Extension)" %>
		</div>
		<div class="col-md-3">
			<%= link_to '<span class="fui-cross-inverted"> Delete</span>'.html_safe, '#', :class => "remove_fields btn btn-small btn-danger" %>
		</div>
	</div>
	<%= f.hidden_field :_destroy %>
</fieldset>