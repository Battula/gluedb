<fieldset>
	<div class="row">
		<div class="col-md-2">
			<%= f.input :email_type do %>
			  <%= f.select :email_type,  Email::TYPES, {include_blank: "Type"}, { class: "select select-primary", data: { toggle: "select"}, disabled: true } %>
			<% end %>
		</div>
		<div class="col-md-offset-1 col-md-3">
			<%= f.input :email_address, as: :email, placeholder: "name@example.com", disabled: true %>
		</div>
		<p class="text-right">
			<%= link_to '<span class="fui-cross-circle"> Delete Email</span>'.html_safe, '#', :class => "remove_fields text-danger", disabled: true %>
		</p>
	</div>
	<%= f.hidden_field :_destroy %>
	<hr/>
</fieldset>
