<fieldset>
  <div class="row">
    <div class="col-md-3">
      <%= m.input :gender, as: :select, collection: ["male", "female", "unknown"], include_blank: "Gender" %>
    </div>
    <div class="col-md-2">
      <%= m.input :ssn, as: :string, title: "SSN", placeholder: "SSN", input_html: { value: number_to_ssn(m.object.ssn), maxlength: 11 } %>
    </div>
    <div class="col-md-7">
      <div class="input-group col-sm-4">
        <span class="input-group-btn">
          <button class="btn" type="button"><span class="fui-calendar"></span></button>
        </span>
        <%= m.input_field :dob, as: :string,
          start_year: Date.today.year - 110, 
          end_year: Date.today.year, 
          placeholder: "mm/dd/yyyy",
          class: "date_picker",
          value: m.object.dob.try(:strftime, "%m/%d/%Y")
        %>
      </div>
    </div>
  </div>
</fieldset>

