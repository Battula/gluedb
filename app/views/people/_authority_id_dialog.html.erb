<div class="modal fade" id="authorityIDModal" tabindex="-1" role="dialog" aria-labelledby="authorityIDModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="authorityIDModalLabel">Select Authority ID</h4>
      </div>
      <div class="modal-body">
        <form>
          <% person.members.each do |m| %>
            <%= radio_button("radio", "authority_id", "#{m.hbx_member_id}") %>
            <%= m.hbx_member_id %><br>
          <% end %>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>
