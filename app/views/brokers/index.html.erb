<%- model_class = Broker -%>
<%t '.title', :default => model_class.model_name.human.pluralize.titleize %>
<div class="page-header">
  <ul class="breadcrumb">
    <li class="active"><%= model_class.model_name.human.titleize.pluralize %></li>
  </ul>

  <div class="row">
    <div class="col-md-8">
      <!-- <% link_to "New", new_broker_path, class: "btn btn-primary" %> -->
    </div>
    <div class="col-md-4">
      <%= render 'broker_search', q: @q %>
    </div>
  </div>
</div>

<table class="table table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th>Broker/TPA</th>
      <th><%= model_class.human_attribute_name(:npn) %></th>
      <th><%= model_class.human_attribute_name(:employer_count) %></th>
    </tr>
  </thead>
  <tbody>
    <% @brokers.each do |broker| %>
      <tr>
        <td><%= link_to mixed_case(broker.name_full), broker_path(broker) %></td>
        <td><%= broker.b_type.capitalize %></td>
        <td><%= broker.npn %></td>
        <td><%= broker.employers.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
 
<div class="row">
  <div class="col-md-8">
    <%= paginate @brokers, theme: "twitter-bootstrap", pagination_class: "pagination-plain" %>
  </div>
  <div class="rol-md-4">
    <p><%= "#{number_with_delimiter(@brokers.count)} / #{number_with_delimiter(Broker.count)} " %><small>(brokers selected / total)</small></p>
  </div>
</div>
 
